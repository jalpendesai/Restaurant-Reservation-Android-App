<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Splash Screen theme. -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <!-- Control Theme -->
    <style name="LabelControlTheme">
        <item name="android:layout_width">@dimen/labelWidth</item>.
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/labelPadding</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="FormButtonTheme">
        <item name="android:layout_width">match_parent</item>.
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/buttonMargin</item>
        <item name="android:layout_marginBottom">@dimen/buttonMargin</item>
    </style>

    <style name="ConfirmButton">
        <item name="android:background">#34cf95</item>
        <item name="android:fontFamily">Arial</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="CancelButton">
        <item name="android:background">#ee5f45</item>
        <item name="android:fontFamily">Arial</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="OtherButton">
        <item name="android:background">#756f7c</item>
        <item name="android:fontFamily">Arial</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#ffffff</item>
    </style>
</resources>
